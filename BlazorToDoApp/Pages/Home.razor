@page "/" 

<PageTitle>Home</PageTitle>
<style>
    .fatto {
        text-decoration: line-through;
        color: gray;
    }
</style>
<h1>Le mie cose da fare</h1>

<input type="text" placeholder="Nuovo compito..." @bind="newTodo" />
<button @onclick="AddTodo">Aggiungi</button>
@if(!string.IsNullOrEmpty(errorMessage)) // se la variabile errorMessage è diversa da "" allora significa che è stato rilevato un errore e quindi
{
    <p style="color: red;">@errorMessage</p> // andrò a stampare il messaggio di errore (tag p dentro quadre con stile color rosso)
}

<ul>
    @foreach (var todo in todos)
    {
        <li class="@(todo.IsCompleted ? "fatto" : "")">
            <input type="checkbox" @bind="todo.IsCompleted" />
            @todo.Title
            <button @onclick="() => DeleteTodo(todo)">Elimina</button>
        </li>
    }
    
</ul>

@code {
    string newTodo;
    private string errorMessage = "";

    private void AddTodo()
    {
        if (!string.IsNullOrWhiteSpace(newTodo))
        {
            todos.Add(new TodoItem { Title = newTodo, IsCompleted = false });
            newTodo = "";
            errorMessage = ""; // Resetta il messaggio di errore se l'aggiunta è riuscita
        }
        else {
            errorMessage = "Inserisci un todo valido, non puoi aggiungere un todo vuoto!"; 
        }
    }

    private void DeleteTodo(TodoItem itemToRemove) => todos.Remove(itemToRemove);

    public class TodoItem
    {
        public string Title { get; set; }
        public bool IsCompleted { get; set; }
    }
    private List<TodoItem> todos = new List<TodoItem> 
    // la variabile todos è una lista di oggetti di tipo TodoItem, e inizializziamo questa lista con tre elementi
    {
        new TodoItem { Title = "Fare la spesa", IsCompleted = false },
        new TodoItem { Title = "Portare fuori il gatto", IsCompleted = false },
        new TodoItem { Title = "Finire il progetto Blazor", IsCompleted = true }
    };
}